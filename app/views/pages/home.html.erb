<div class="container">
  <div class="input-group mb-3">
  <div class="input-group-prepend">
    <%= form_tag stalls_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Din quel coin ?"
      %>
      <%= submit_tag "Va caire !", class: "btn btn-primary" %>
    <% end %>
  </div>
  <input type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
</div>

  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.stockvault.net/data/2008/07/03/105783/preview16.jpg)">
    <%= link_to "Lille", stalls_path %>
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.stockvault.net/data/2008/07/03/105786/preview16.jpg)">
    <%= link_to "Arras", stalls_path %>
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.stockvault.net/data/2013/07/14/146569/preview16.jpg)">
    <%= link_to "Valenciennes", stalls_path %>
    </div>
  </div>
</div>
