<div class="container">
  <div class="pics">
    <%= image_tag "animated_party", alt:"illustration animée d'une fête", size: "300" %>
    <div class="borderbox">
      <div class="border border1"></div>
      <div class="border"></div>
      <div class="border border3"></div>
      <div class="border"></div>
      <div class="border border5"></div>
    </div>
    <%= image_tag "animated_food_truck.svg", alt:"illustration animée d'un foodtruck", size: "300" %>
  </div>

  <div class="punchlines">
    <p class="punchline">Vous voulez fêter un événement d'une façon originale, avec une touche Ch'ti & Choc ?</p>
    <p class="punchline"><strong>Get the Frite Home</strong> est un service de location de baraque à frites à domicile.Une idée simple, gourmande, locale !</p>
  </div>

  <div class="input-group d-flex justify-content-center">
    <div class="d-flex input-group-prepend">
      <%= form_tag stalls_path, class: "form-inline", method: :get do %>
        <%= image_tag "barack_2.png", alt:"Dessin de Barack Obama", class: "obama" %>
        <div class="d-inline-flex p-2 bd-highlight input-group mb-2 mr-sm-2">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control rounded",
            placeholder: "Din quel coin ?"
          %>
        </div>
        <%= submit_tag "Va caire !", class: "btn btn-outline-primary mb-2" %>
        <%= image_tag "barack_2.png", alt:"Dessin de Barack Obama", class: "obama" %>
      <% end %>
    </div>
  </div>

  <div class="cards mt-3">
    <%= link_to stalls_path(query:"lille") do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.stockvault.net/data/2008/07/03/105783/preview16.jpg)">
        <p>Lille</p>
      </div>
    <% end %>
    <%= link_to stalls_path(query:"arras") do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.stockvault.net/data/2008/07/03/105786/preview16.jpg)">
        <p>Arras</p>
    </div>
   <% end %>

    <%= link_to stalls_path(query:"Valenciennes") do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://lvdneng.rosselcdn.net/sites/default/files/dpistyles_v2/ena_16_9_extra_big/2020/05/07/node_750150/47014325/public/2020/05/07/B9723405549Z.1_20200507184659_000%2BGLTFVRH37.1-0.jpg?itok=kMe8Q8481589032339)">
        <p>Valenciennes</p>
    </div>
    <% end %>
  </div>
</div>
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
    Made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>
