 <div class="container">
      <div class="row">
        <div class="col-6 offset-md-3">
          <form class='form-inline my-5'>
            <input type="text" class="form-control flex-grow-1 mr-2" placeholder="Type an address">
            <input type="submit" value="Geocode!" class="btn btn-outline-secondary">
          </form>
           <p class='text-monospace lead text-center font-weight-bold'>
            <!-- Display the coordinates here -->
          </p>
        </div>
      </div>
      </div>


<div class="main-container">
   <div class="cards">
     <% @stalls.each do |stall| %>
        <div class="card">
            <img src="https://www.stockvault.net/data/2019/03/20/262656/preview16.jpg">

            <h2><%= link_to stall.name, stall_path(stall) %></h2>
            <p><%=stall.price_per_day %></p>
            <p><%=stall.description %></p>
        </div>
        <% end %>
    </div>
    <div id="map" 
    style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV[''] %>">
     </div> 
</div>
